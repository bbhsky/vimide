# .bashrc

PHPCTAGS_PATH=$HOME/.vim/team_bundle/phpctags

if [[ -x $PHPCTAGS_PATH/phpctags ]]; then
    export PHPCTAGS_PATH
    PATH=$PATH:$PHPCTAGS_PATH
    export PATH
fi

alias vj="vim '+call VjOpen()'"
alias vjbackup="bash /home/q/tools/game_team/vimide/backup.sh"
alias vjrecovery="bash /home/q/tools/game_team/vimide/recovery.sh"
alias vjupdate="bash /home/q/tools/game_team/vimide/update.sh"
 
